include-file = $HOME/.config/polybar/colors.ini

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5

[bar/sub]
inherit=bar/main
tray-position=none

[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 27

background = ${color.background}
foreground = ${color.foreground}

line-size = 4
line-color = #f00

font-0 = "Fira Code:size=10:antialias=true;0"
font-1 = "Font Awesome 5 Free Solid:style=Solid:size=10;1"
font-2 = "Font Awesome 5 Brands:size=10;1"

modules-left = workspaces
modules-center = title
modules-right = ebook adb mpd date

tray-position = right
tray-background = ${color.background}
tray-padding = 10

locale = de_DE.utf8

cursor-click = pointer

[module/title]
type = internal/xwindow
format = <label>
label = %title%
label-empty = Empty

[module/workspaces]
type = internal/xworkspaces
pin-workspaces = false

enable-click = true
enable-scroll = true

format = <label-state>
format-padding = 0

label-monitor = %name%

label-active = %name%
label-active-background = ${color.accent-0}
label-active-underline = ${color.accent-0}

label-occupied = %name%
label-occupied-foreground = ${color.foreground}
label-occupied-underline = ${color.accent-0}

label-urgent = %name%
label-urgent-foreground = ${color.foreground}
label-urgent-background = ${color.alert}
label-empty = %name%
label-empty-foreground = ${color.foreground-alt}
label-active-padding = 2
label-urgent-padding = 2
label-occupied-padding = 2
label-empty-padding = 2

[module/adb]
type = custom/script
exec = polybar-adb
exec-if = pgrep -x adb
interval = 2
click-left = exec polybar-adb-push
format-background = ${color.accent-1}

[module/ebook]
type = custom/script
exec = polybar-ebook
exec-if = ebook-device ls
interval = 10
format-background = ${color.accent-2}

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

interval = 2

format-online-background = ${color.accent-2}
format-online-underline = ${color.accent-2-alt}
format-online = <bar-progress> <icon-prev> <toggle> <icon-next> <label-song>
label-song = %title%

bar-progress-width = 15
bar-progress-indicator = ▰
bar-progress-fill = ▰
bar-progress-empty = ▱
icon-next = 
icon-prev = 
icon-pause = 
icon-play = 

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0

format-connected = <ramp-signal>
format-connected-background = ${color.accent-2}
label-connected = %essid%

format-disconnected = ""
format-disconnected-background = ${color.alert}
label-disconnected = %essid% disconnected

ramp-signal-0 = ""
ramp-signal-padding = 1
ramp-signal-foreground = ${color.foreground}

[module/date]
type = internal/date
interval = 1

time = " %H:%M"
time-alt = " %a, %b %d %H:%M"

format-padding = 1
format-prefix = %{T3}%{T-}
label = %time%
format-foreground = ${color.foreground}
format-background = ${color.accent-0}
label-font = 3

[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%
format-background = ${color.accent-2-alt}

exec = ~/.config/polybar/scripts/pulseaudio-control.sh listen
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pulseaudio-control.sh togmute
click-middle = ~/.config/polybar/scripts/pulseaudio-control.sh next-sink
scroll-up = ~/.config/polybar/scripts/pulseaudio-control.sh up
scroll-down = ~/.config/polybar/scripts/pulseaudio-control.sh down
label-padding = 2
label-foreground = ${color.foreground}
